<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="apps.DeliciasdelMar3.proyectsqlite">
    <!-- Permisos de camara -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="apps.DeliciasdelMar3.DetalleRegistroActivity"></activity>
        <activity android:name="apps.DeliciasdelMar3.AgregarRegistroActivity" />
        <activity android:name="apps.DeliciasdelMar3.MainActivity"></activity>
        <activity android:name="apps.DeliciasdelMar3.Sucursales"></activity>
        <activity android:name="apps.DeliciasdelMar3.splash">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Imagen Cropper Activity -->



    </application>

</manifest>